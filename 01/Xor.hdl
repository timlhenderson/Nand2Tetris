/**
 *  Exclusive-or gate: out = !(a == b).
 */

CHIP Xor {

    IN a, b;
    OUT out;

    PARTS:
    Not(in=a, out=nota);
    Not(in=b, out=notb);
    Nand(a=nota, b=b, out=w1);
    Nand(a=a, b=notb, out=w2);
    Nand(a=w1, b=w2, out=out);
}
